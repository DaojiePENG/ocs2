<launch>
    <arg name="rviz"       default="true" />
    <arg name="task_name"  default="mpc"/>

    <group if="$(arg rviz)">
      <include file="$(find ocs2_anymal_visualization)/launch/visualization.launch"/>
    </group>

    <node pkg="ocs2_anymal_interface" type="anymal_mpc_node" name="anymal_mpc_node"
          output="screen" args="$(arg task_name)" launch-prefix=""/>

    <node pkg="ocs2_anymal_interface" type="dummy_mrt_node" name="dummy_mrt_node"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal --"/>

    <node pkg="ocs2_anymal_commands" type="trajectory_command_node" name="trajectory_command_node"
          output="screen" launch-prefix="gnome-terminal -- "/>
        <!-- output="screen" launch&#45;prefix="gnome&#45;terminal &#45;&#45; gdb &#45;ex  'set follow&#45;fork&#45;mode child' &#45;e 'break ScpToOcs2.cpp:applyInitStateToCostDesiredTrajectories' &#45;ex run &#45;&#45;args "/> -->

    <node pkg="ocs2_anymal_commands" type="gait_command_node" name="gait_command_node"
          output="screen" launch-prefix="gnome-terminal --"/>
    <node pkg="ocs2_anymal_commands" type="target_command_node" name="target_command_node"
           output="screen" launch-prefix="gnome-terminal --"/>

</launch>
