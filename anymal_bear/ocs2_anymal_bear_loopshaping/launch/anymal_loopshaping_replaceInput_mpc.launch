<launch>
    <arg name="rviz"       default="true" />
    <arg name="task_name"  default="mpc_augmented"/>

    <group if="$(arg rviz)">
      <include file="$(find ocs2_anymal_bear_visualization)/launch/visualization.launch"/>
    </group>

    <node pkg="ocs2_anymal_bear_loopshaping" type="ocs2_anymal_bear_loopshaping_replaceInput_mpc_node" name="ocs2_anymal_bear_loopshaping_replaceInput_mpc_node"
          output="screen" args="$(arg task_name)" launch-prefix=""/>

    <node pkg="ocs2_anymal_bear_loopshaping" type="ocs2_anymal_bear_loopshaping_replaceInput_dummy" name="ocs2_anymal_bear_loopshaping_replaceInput_dummy"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal -- "/>

    <node pkg="ocs2_anymal_commands" type="gait_command_node" name="gait_command_node"
          output="screen" launch-prefix="gnome-terminal --"/>

    <node pkg="ocs2_anymal_commands" type="target_command_node" name="target_command_node"
          output="screen" launch-prefix="gnome-terminal --"/>
</launch>