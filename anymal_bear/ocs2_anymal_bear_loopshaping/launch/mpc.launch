<launch>
    <arg name="rviz"              default="true" />
    <arg name="task_name"         default="mpc"/>
    <arg name="description_name"  default="ocs2_anymal_description"/>
    <arg name="target_command"    default="$(find ocs2_anymal_commands)/config/targetCommand.info"/>

    <group if="$(arg rviz)">
      <!-- Load robot description -->
      <include file="$(find ocs2_anymal_models)/launch/load_urdf.launch">
          <arg name="robot_name"         value="bear"/>
          <arg name="description_name"   value="$(arg description_name)"/>
      </include>
      <!-- Launch visualization -->
      <include file="$(find ocs2_quadruped_interface)/launch/visualization.launch">
          <arg name="description_name"   value="$(arg description_name)"/>
      </include>
    </group>

    <node pkg="ocs2_anymal_bear_loopshaping" type="ocs2_anymal_bear_loopshaping_mpc_node" name="ocs2_anymal_bear_loopshaping_mpc_node"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal --"/>

    <node pkg="ocs2_anymal_bear_loopshaping" type="ocs2_anymal_bear_loopshaping_dummy_mrt_node" name="ocs2_anymal_bear_loopshaping_dummy_mrt_node"
          output="screen" args="$(arg task_name)" launch-prefix="gnome-terminal --"/>

    <node pkg="ocs2_anymal_commands" type="gait_command_node" name="gait_command_node"
          output="screen" launch-prefix="gnome-terminal --"/>

    <node pkg="ocs2_anymal_commands" type="target_command_node" name="target_command_node"
          output="screen" args="$(arg target_command)" launch-prefix="gnome-terminal --"/>
</launch>
