<launch>

  <arg name="description_name"      default=""/>

  <!-- visualizes goal, opt. parameters and cartesian base state, endeffector positions and forces -->
  <node name="rviz_marker_node" pkg="xpp_vis" type="rviz_marker_node" output="screen">
  </node>

  <!-- Launch rviz with specific configuration -->
  <node name="rviz_ocs2" pkg="rviz" type="rviz"  args="-d $(find ocs2_anymal_visualization)/config/config.rviz">
  </node>

  <!-- Publishes tf -->
  <node name="ocs2_anymal_visualization_visualizer" pkg="ocs2_anymal_visualization" type="ocs2_anymal_visualization_visualizer" output="screen">
    <param name="description_name" value="$(arg description_name)" />
  </node>

</launch>


